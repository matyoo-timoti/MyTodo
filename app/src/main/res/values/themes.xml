<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTodo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="colorAccent">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/holo_green_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Shape of floating button -->
    <style name="FabShape2" parent="">
        <item name="cornerSize">30%</item>
    </style>

    <style name="ThemeOverlay.MyTodo.FullscreenContainer" parent="">
        <item name="android:imeFullscreenBackground">@color/light_blue_600</item>
        <item name="android:textColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.MyTodo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyTodo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyTodo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>